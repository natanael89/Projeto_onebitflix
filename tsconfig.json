{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react",

    /* Modules */
    "module": "commonjs",                                
    "rootDir": "./src",                                  
    "outDir": "./dist",
    
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            

    /* Type Checking */
    "strict": true,      
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true                                 
  }
}
